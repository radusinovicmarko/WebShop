{
  "rules": [
    {
      "methods": ["POST"],
      "pattern": "/api/v1/auth/**",
      "roles": []
    },
    {
      "methods": ["GET"],
      "pattern": "/api/v1/auth/state",
      "roles": []
    },
    {
      "methods": ["POST"],
      "pattern": "/api/v1/products",
      "roles": ["RegisteredUser"]
    },
    {
      "methods": ["POST", "DELETE"],
      "pattern": "/api/v1/products/**",
      "roles": ["RegisteredUser"]
    },
    {
      "methods": ["GET"],
      "pattern": "/api/v1/products/**",
      "roles": []
    },
    {
      "methods": ["GET"],
      "pattern": "/api/v1/products*",
      "roles": []
    },
    {
      "methods": ["GET", "PUT"],
      "pattern": "/api/v1/users/**",
      "roles": ["RegisteredUser"]
    },
    {
      "methods": ["POST"],
      "pattern": "/api/v1/messages",
      "roles": ["RegisteredUser"]
    },
    {
      "methods": ["GET"],
      "pattern": "/api/v1/categories",
      "roles": []
    },
    {
      "methods": ["GET"],
      "pattern": "/api/v1/categories/**",
      "roles": []
    }
  ]
}